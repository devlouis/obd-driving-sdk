<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
              xmlns:app="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
              android:orientation="vertical"
             tools:context=".ui.fragment.ConfigurationFragment">

    <include
            android:id="@+id/includeToolbar"
            layout="@layout/toolbar" />

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="?attr/actionBarSize">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                    android:id="@+id/ll_trip_detail_top"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_trip_detail_top"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:orientation="horizontal">

                <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.3"
                        android:orientation="vertical">
                    <com.mdp.innovation.obd_driving.util.CustomTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:textColor="#FFF"
                            android:background="@color/colorToolbar"
                            android:tag="2"
                            android:gravity="center"
                            android:text="@string/duration"/>
                    <com.mdp.innovation.obd_driving.util.CustomTextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textSize="16sp"
                            android:textColor="@color/colorToolbar"
                            android:tag="1"
                            android:gravity="center"
                            android:text="00:35:01"/>
                </LinearLayout>
                <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.3"
                        android:orientation="vertical">
                    <com.mdp.innovation.obd_driving.util.CustomTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:textColor="#FFF"
                            android:background="@color/colorToolbar"
                            android:tag="2"
                            android:gravity="center"
                            android:text="@string/score"/>
                    <com.mdp.innovation.obd_driving.util.CustomTextView
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:textSize="20sp"
                            android:textColor="@color/colorToolbar"
                            android:tag="2"
                            android:gravity="center"
                            android:text="8.5"/>
                </LinearLayout>
                <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.3"
                        android:orientation="vertical">
                    <com.mdp.innovation.obd_driving.util.CustomTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:textColor="#FFF"
                            android:background="@color/colorToolbar"
                            android:tag="2"
                            android:gravity="center"
                            android:text="@string/distance"/>
                    <com.mdp.innovation.obd_driving.util.CustomTextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textSize="16sp"
                            android:textColor="@color/colorToolbar"
                            android:tag="1"
                            android:gravity="center"
                            android:text="451m"/>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_map"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="#000"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@id/ll_trip_detail_top"
                app:layout_constraintHeight_percent=".5"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintWidth_percent="1">

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:src="@drawable/map_test"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_trip_detail_middle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:gravity="center"
                app:layout_constraintTop_toBottomOf="@id/ll_map">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_trip_detail_top"
                    android:orientation="horizontal">

                    <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="vertical">
                        <com.mdp.innovation.obd_driving.util.CustomTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="16sp"
                                android:layout_weight="1"
                                android:textColor="#FFF"
                                android:paddingLeft="20dp"
                                android:paddingRight="20dp"
                                android:background="@color/colorToolbar"
                                android:tag="2"
                                android:gravity="center"
                                android:text="@string/start"/>
                        <com.mdp.innovation.obd_driving.util.CustomTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="16sp"
                                android:layout_weight="1"
                                android:textColor="#FFF"
                                android:background="@color/colorToolbar"
                                android:tag="2"
                                android:gravity="center"
                                android:text="@string/end"/>
                    </LinearLayout>
                    <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="vertical">
                        <com.mdp.innovation.obd_driving.util.CustomTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="14sp"
                                android:layout_weight="1"
                                android:paddingLeft="20dp"
                                android:paddingRight="20dp"
                                android:textColor="@color/colorToolbar"
                                android:tag="1"
                                android:gravity="center"
                                android:text="10/10/2018 10:10:25"/>
                        <com.mdp.innovation.obd_driving.util.CustomTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="14sp"
                                android:layout_weight="1"
                                android:paddingLeft="20dp"
                                android:paddingRight="20dp"
                                android:textColor="@color/colorToolbar"
                                android:tag="1"
                                android:gravity="center"
                                android:text="10/10/2018 10:45:26"/>
                    </LinearLayout>

                </LinearLayout>



            </LinearLayout>

            <LinearLayout
                    android:id="@+id/ll_trip_detail_bottom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp"
                    app:layout_constraintTop_toBottomOf="@id/ll_trip_detail_middle"
                    android:orientation="vertical">

                <com.mdp.innovation.obd_driving.util.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:layout_weight="1"
                    android:textColor="#FFF"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:background="@color/colorToolbar"
                    android:tag="2"
                    android:gravity="left"
                    android:text="@string/events"/>

                <include layout="@layout/item_trip_detail_event_type"/>

            </LinearLayout>

        </android.support.constraint.ConstraintLayout>

    </ScrollView>

    <RelativeLayout
            android:id="@+id/loading"
            android:translationZ="2dp"
            android:visibility="gone"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorBackgrondDarkTransparent"
            android:gravity="center">

        <ProgressBar
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:theme="@style/AppTheme.BlueAccent"
        />

    </RelativeLayout>

</RelativeLayout>