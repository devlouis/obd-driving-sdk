<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
              xmlns:app="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
              android:orientation="vertical">

    <LinearLayout
            android:id="@+id/cl_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.16"
                android:gravity="center"
                android:orientation="vertical">

            <TextView
                    android:layout_width="2dp"
                    android:layout_height="10dp"
                    android:id="@+id/tv_line_1"
                    android:visibility="invisible"
                    android:background="@drawable/bg_trip_detail_top"
                    android:gravity="center"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="0dp"/>

            <TextView
                    android:layout_width="17dp"
                    android:id="@+id/tv_circle_1x"
                    android:background="@drawable/bg_trip_detail_event_circle_1"
                    android:layout_height="17dp"
                    android:gravity="center"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="0dp"/>

            <TextView
                    android:layout_width="2dp"
                    android:layout_height="10dp"
                    android:id="@+id/tv_line_2"
                    android:background="@drawable/bg_trip_detail_top"
                    android:gravity="center"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="0dp"/>

        </LinearLayout>

        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.84"
                android:gravity="center_horizontal"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">

            <com.mdp.innovation.obd_driving.util.CustomTextView
                    android:id="@+id/tv_event_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textColor="@color/colorToolbar"
                    android:tag="2"
                    android:gravity="left"
                    android:text="AceleraciÃ³n"/>

            <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.84"
                    android:gravity="right"
                    android:orientation="horizontal">

                <com.mdp.innovation.obd_driving.util.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintEnd_toStartOf="@id/img_arrow"
                        android:textSize="18sp"
                        android:textColor="@color/colorToolbar"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:tag="2"
                        android:gravity="left"
                        android:text="-1.5"/>

                <ImageView
                        android:layout_width="wrap_content"
                        android:id="@+id/img_arrow"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:src="@android:drawable/arrow_down_float"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_height="fill_parent"/>

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#CCC"
            android:orientation="horizontal">

        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.16"
                android:gravity="center"
                android:orientation="horizontal">

            <TextView
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:id="@+id/tv_line_3"
                    android:background="@drawable/bg_trip_detail_top"
                    android:gravity="center"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="0dp"/>

        </LinearLayout>

        <com.mdp.innovation.obd_driving.util.CustomTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.28"
                android:textSize="14sp"
                android:gravity="center"
                android:textColor="#000"
                android:tag="1"
                android:text="@string/value"/>
        <com.mdp.innovation.obd_driving.util.CustomTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.28"
                android:textSize="14sp"
                android:gravity="center"
                android:textColor="#000"
                android:tag="1"
                android:text="@string/duration"/>
        <com.mdp.innovation.obd_driving.util.CustomTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.28"
                android:textSize="14sp"
                android:gravity="center"
                android:textColor="#000"
                android:tag="1"
                android:text="@string/hour"/>


    </LinearLayout>

    <include layout="@layout/item_trip_detail_event"/>
    <include layout="@layout/item_trip_detail_event"/>

</LinearLayout>