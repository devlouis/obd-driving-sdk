<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="tvScreenTitle">
        <item name="android:textSize">24dp</item>
        <item name="android:textColor">#000</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="tvScreenSubTitle">
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">#000</item>
    </style>

    <style name="dialogTitle">
        <item name="android:textSize">22dp</item>
        <item name="android:textColor">#FFF</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="dialogText">
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">#000</item>
    </style>

    <style name="tvProm">
        <item name="android:textSize">62dp</item>
        <item name="android:textColor">#000</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.BlueAccent">
        <item name="colorAccent">@color/colorToolbar</item>
    </style>

    <style name="toolbarStyle" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:fontFamily">@font/titilliumweb_bold</item>
        <item name="android:textColor">#FFF</item>
    </style>

    <style name="NavigationText">
        <item name="android:textColor">@color/colorToolbar</item>
        <item name="android:fontFamily">@font/titilliumweb_bold</item>
    </style>

</resources>
